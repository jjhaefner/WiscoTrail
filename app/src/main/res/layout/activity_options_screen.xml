<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/cowprint"

    tools:context="edu.wisc.ece.wiscotrail.OptionsScreen">

    <!-- widgets have the necessary modifications copied into ALL widgets grouped @ top -->

    <Button
        android:textAllCaps = "false"
        android:textColor="@color/almost_white"
        android:background="@color/black"

        android:layout_width="@dimen/menuBtnWidth"
        android:layout_height="@dimen/menuBtnHeight"

        android:text="Travel the trail"
        android:id="@+id/newGame"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="192dp"
        android:onClick="startTrail" />

    <Button
        android:textAllCaps = "false"
        android:textColor="@color/almost_white"
        android:background="@color/black"

        android:layout_width="@dimen/menuBtnWidth"
        android:layout_height="@dimen/menuBtnHeight"

        android:text="How To Play"
        android:id="@+id/LearnAboutTheTrailBtn"
        android:layout_marginTop="35dp"
        android:layout_alignTop="@+id/newGame"
        android:layout_centerHorizontal="true"
        android:onClick="learnAboutTrail"/>

    <Button
        android:textAllCaps = "false"
        android:textColor="@color/almost_white"
        android:background="@color/black"

        android:layout_width="@dimen/menuBtnWidth"
        android:layout_height="@dimen/menuBtnHeight"

        android:text="Quit"
        android:id="@+id/EndBtn"
        android:layout_below="@+id/ChooseManagementOptionsBtn"
        android:layout_centerHorizontal="true"
        android:onClick="endGame"/>

    <Button
        android:textAllCaps = "false"
        android:textColor="@color/almost_white"
        android:background="@color/black"

        android:layout_width="@dimen/menuBtnWidth"
        android:layout_height="@dimen/menuBtnHeight"

        android:text="Choose Management Options"
        android:id="@+id/ChooseManagementOptionsBtn"
        android:onClick="managementOptions"
        android:layout_below="@+id/LearnAboutTheTrailBtn"
        android:layout_alignLeft="@+id/LearnAboutTheTrailBtn"
        android:layout_alignStart="@+id/LearnAboutTheTrailBtn" />
</RelativeLayout>
