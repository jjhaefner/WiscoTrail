<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.wisc.ece.wiscotrail.Shop">


    <TextView
        android:text="$60/pair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/textView24"
        android:textSize="18sp" />

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView27"
        android:layout_alignLeft="@+id/textView24"
        android:layout_alignStart="@+id/textView24"
        android:id="@+id/textView28"
        android:textSize="20sp" />

    <TextView
        android:text="$18/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignRight="@+id/textView24"
        android:layout_alignEnd="@+id/textView24"
        android:id="@+id/textView29"
        android:textSize="18sp" />

    <TextView
        android:text="30 cents/lb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/enterFood"
        android:layout_alignBottom="@+id/enterFood"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="$4/20 bullets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView30"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView22"
        android:layout_alignBottom="@+id/textView22"
        android:layout_toRightOf="@+id/enterAmmunition"
        android:layout_toEndOf="@+id/enterAmmunition" />

    <EditText
        android:layout_width="@dimen/storeNumWidth"
        android:layout_height="@dimen/storeNumHeight"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enterOxen"
        android:hint="0"
        android:layout_alignBaseline="@+id/textView24"
        android:layout_alignBottom="@+id/textView24"
        android:layout_toLeftOf="@+id/textView25"
        android:layout_toStartOf="@+id/textView25"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <EditText
        android:layout_width="@dimen/storeNumWidth"
        android:layout_height="@dimen/storeNumHeight"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enterFood"
        android:hint="0"
        android:layout_alignBaseline="@+id/textView20"
        android:layout_alignBottom="@+id/textView20"
        android:layout_alignLeft="@+id/enterAlcohol"
        android:layout_alignStart="@+id/enterAlcohol" />

    <EditText
        android:layout_width="@dimen/storeNumWidth"
        android:layout_height="@dimen/storeNumHeight"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enterClothing"
        android:hint="0"
        android:layout_alignBaseline="@+id/textView21"
        android:layout_alignBottom="@+id/textView21"
        android:layout_alignLeft="@+id/enterFood"
        android:layout_alignStart="@+id/enterFood" />

    <EditText
        android:layout_width="@dimen/storeNumWidth"
        android:layout_height="@dimen/storeNumHeight"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enterAmmunition"
        android:hint="0"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView30"
        android:layout_alignBottom="@+id/textView30"
        android:layout_alignLeft="@+id/enterClothing"
        android:layout_alignStart="@+id/enterClothing" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button10"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="goNext"/>

    <TextView
        android:text="Food:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView27"
        android:layout_alignStart="@+id/textView27" />

    <TextView
        android:text="Ammunition:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        android:textSize="18sp"
        android:layout_below="@+id/enterClothing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="Clothing:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textSize="18sp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/enterFood"
        android:layout_alignRight="@+id/textView22"
        android:layout_alignEnd="@+id/textView22" />

    <TextView
        android:text="Total:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button10"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_marginBottom="13dp"
        android:id="@+id/textView49"
        android:textSize="18sp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView49"
        android:layout_alignBottom="@+id/textView49"
        android:layout_alignLeft="@+id/enterAmmunition"
        android:layout_alignStart="@+id/enterAmmunition" />

    <TextView
        android:text="What would you like to buy?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView27"
        android:textSize="20sp"
        android:layout_below="@+id/textView13"
        android:layout_alignRight="@+id/textView19"
        android:layout_alignEnd="@+id/textView19"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="Oxen:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView19"
        android:textSize="18sp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView27"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:text="Alcohol:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enterFood"
        android:layout_alignRight="@+id/textView20"
        android:layout_alignEnd="@+id/textView20"
        android:layout_marginBottom="29dp"
        android:id="@+id/textView52"
        android:textSize="18sp" />

    <EditText
        android:layout_width="@dimen/storeNumWidth"
        android:layout_height="@dimen/storeNumHeight"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enterAlcohol"
        android:hint="0"
        android:layout_alignBaseline="@+id/textView52"
        android:layout_alignBottom="@+id/textView52"
        android:layout_alignLeft="@+id/enterOxen"
        android:layout_alignStart="@+id/enterOxen" />


</RelativeLayout>
